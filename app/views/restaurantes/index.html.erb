<p id="notice"><%= notice %></p>

<h1>Listing Restaurantes</h1>

<table class="table table-hover table-condensed">
  <thead>
    <tr>
      <th>Name</th>
      <th>Address</th>
      <th>Phone</th>
      <th>Website</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @restaurantes.each do |restaurante| %>
      <tr>
        <td><%= restaurante.name %></td>
        <td><%= restaurante.address %></td>
        <td><%= restaurante.phone %></td>
        <td><%= restaurante.website %></td>
        <td><%= link_to 'Show', restaurante, class: "btn btn-link" %></td>
        <td><%= link_to 'Edit', edit_restaurante_path(restaurante), class: "btn btn-link" %></td>
        <td><%= link_to 'Destroy', restaurante, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-link" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

